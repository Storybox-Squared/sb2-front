extends layout

block content
    script(src='https://cdn.auth0.com/js/lock/10.6/lock.min.js')

    div(id="root" style="width: 280px; margin: 40px auto; padding: 10px;")

    script.
        var options = {
            theme: {
                logo: 'https://scontent.flhr3-1.fna.fbcdn.net/v/t1.0-9/14955876_337704169919647_4483487952665888057_n.jpg?oh=92056202f322195b2a9ee42db007ae05&oe=58AFFD50'
            },
            languageDictionary: {
                title: "SB2 Cloud"
            }, auth: {
                redirectUrl: '#{env.AUTH0_CALLBACK_URL}',
                responseType: 'code',
                params: {
                    scope: 'openid name email picture'
                }
            }
        };

        // Construct an instance of Auth0Lock with your clientId and aut0 domain name
        var lock = new Auth0Lock('#{env.AUTH0_CLIENT_ID}', '#{env.AUTH0_DOMAIN}', options);

        // Show lock's login widget
        lock.show();